<%= render 'books/error', model: @book %>
<h1>Editing Book</h1>

<%= form_with model: @book do |f| %>
    <div>
      <label for="book_title">Title</label><br>
      <%= f.text_field :title %>
    </div>
    <div>
      <label for="book_title">Opinion</label><br>
      <%= f.text_area :body %><br>
    </div>
    <div>
      <%= f.submit 'Update Book' %>
    </div>
    <div>
      <%= link_to 'Show', book_path(@book) %>
      |
      <%= link_to 'Back', books_path %>
    </div>

<% end %>

